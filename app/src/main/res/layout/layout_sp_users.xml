<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="@dimen/_2sdp"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/_4sdp"
            android:id="@+id/iv_sp_users"
            android:background="@drawable/profile_img_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sp_userName"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/londrinasolid_regular"
                android:layout_marginStart="@dimen/_4sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_spLastMsg"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/londrinasolid_light"
                android:textSize="@dimen/_12ssp"
                android:text="Last message"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>