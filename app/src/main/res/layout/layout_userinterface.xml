<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/et_background"
    android:elevation="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/iv_hall"
    android:scaleType="centerCrop"
    />
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_hall"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_2sdp">

            <TextView
                android:id="@+id/tv_hallName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/londrinasolid_regular"

                android:textSize="@dimen/_20ssp" />

            <com.like.LikeButton
                android:id="@+id/starbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                app:anim_scale_factor="2"
                app:dots_primary_color="@color/yellow"
                app:dots_secondary_color="@color/black"
                app:icon_size="25dp"
                app:icon_type="heart" />
        </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl1"
    android:id="@+id/ll1"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/locationnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:fontFamily="@font/londrinasolid_regular"
            android:padding="@dimen/_2sdp"
            android:text="Location: "

            android:textSize="@dimen/_20ssp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20ssp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_80sdp"
            android:fontFamily="@font/londrinasolid_light"
            android:id="@+id/tv_cityName"/>
    </RelativeLayout>


</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:padding="@dimen/_2sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ratings: "
                    android:id="@+id/rat"
               android:layout_centerVertical="true"

                    android:textSize="@dimen/_20ssp"
                    android:fontFamily="@font/londrinasolid_regular"/>
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="4"
                    android:layout_marginLeft="@dimen/_70sdp"
                    android:progressTint="@color/yellow"
                    android:layout_centerVertical="true"
                    android:rating="1" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>