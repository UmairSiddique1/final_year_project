<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".serviceProvider.SpChatActivity2">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:id="@+id/toolbar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/ll1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/spProfile_image"
            android:src="@drawable/ic_profile"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/profile_img_bg"
            android:layout_height="40dp"
            app:civ_border_width="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/tv_spChatHallName"
            android:text="User Name"/>
    </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/cv1"
        android:id="@+id/rv_spMessages"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv1"
       app:cardBackgroundColor="#FAEBEB"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/spMess_et"
            android:layout_margin="@dimen/_10sdp"
            android:hint="Enter your message"
            android:background="@drawable/et_background"
            android:padding="@dimen/_10sdp"
            android:inputType="text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_spSend"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/send_btn_bg"
         android:src="@drawable/ic_send"
            app:tint="@color/white" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_spSend1"
            android:padding="5dp"
            android:visibility="gone"
            android:background="@drawable/send_btn_bg"
            android:text="Img"
            android:textColor="@color/white" />
    </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>