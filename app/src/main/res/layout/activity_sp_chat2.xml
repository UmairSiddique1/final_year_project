<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".serviceProvider.SpChatActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll1">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spProfile_image"
            android:src="@drawable/ic_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:civ_border_width="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/tv_spChatHallName"
            android:text="User Name"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_above="@id/cv1"
        android:id="@+id/rv_spMessages"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cv1"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="5dp">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spMess_et"
            android:hint="Enter your message"
            android:inputType="text"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@id/cv1"
        android:layout_alignParentEnd="true">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_spSend"
            android:padding="5dp"
            android:background="@drawable/send_btn_bg"
            android:text="Send"
            android:textColor="@color/white" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_spSend1"
            android:padding="5dp"
            android:background="@drawable/send_btn_bg"
            android:text="Img"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>